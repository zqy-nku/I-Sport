<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/listitem_main_style" >

	
    <!-- 左半部分 -->
    <!-- 设置用户的头像招聘，使用ImageView组件 -->
    <ImageView 
        android:id="@+id/sportimg"
        android:layout_width="44dp"
        android:layout_height="60dp"
        android:contentDescription="运动种类"
        android:src="@drawable/user"/>
    
    <!-- 右半部分 -->

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        
        <!-- 上半部分 -->

 		        
 		        <TextView
 		            android:id="@+id/TreasTitle"
 		            android:layout_width="fill_parent"
 		            android:layout_height="wrap_content"
 		            android:layout_weight="1"
 		            android:textSize="18sp"
 		            android:text="标题" />
 		         				       
        <!-- 下半部分 -->

        <!-- 设置一个TextView组件对象 -->
        <TextView 
            android:id="@+id/TreasCont"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:text="这是我测试的消息……"/>
        <TextView 
            android:id="@+id/Treascollect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="收藏"
            android:textColor="#ff6600"
            android:paddingLeft="180dp"/>"
        
    </LinearLayout>
</LinearLayout>
</LinearLayout>
