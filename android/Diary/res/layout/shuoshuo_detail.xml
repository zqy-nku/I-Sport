 		        <TextView
 		            android:id="@+id/txtLabel"
 		            android:layout_width="fill_parent"
 		            android:layout_height="wrap_content"
 		           android:layout_gravity="center_horizontal"
 		            android:layout_weight="1"
 		            android:textSize="10sp"
 		           
 		            android:text="用户等级：33" />   
 		             
 		    </TableRow>
 		    
 		    
 		    
 		</TableLayout>
</LinearLayout> 
